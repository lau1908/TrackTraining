@model IEnumerable<TrackTraining.DBModels.Ovelser>
@using TrackTraining.DBModels
@{
    ViewBag.Title = "Ovelser Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Øvelser</title>
</head>
<body>
    <h2 class="øvelseName">Primære øvelser</h2>

    <div class="Ovelsewrapper">

        @foreach (Ovelser o in ViewBag.Primære) //kører igennem dataen i viewbaggen, som kommer fra homecontrolleren, og indsætter dataen
        {
        <div class="ovelsediv" style="background-image: url(@o.Billede)">
            <a href="@Url.Action(
                    "Øvelser", "Home", new RouteValueDictionary(new { ovelseId =o.OvelseId }) //hvis der trykkes på denne, ville den sende et øvelsesid med videre til siden Øvelser
                    )">
                <p class="OvelseNam">@o.OvelseNavn </p>

                </a>
            </div>
           
         }

    </div>
    <h2 class="AndreØvl">Andre øvelser</h2>
    <div class="Ovelsewrapper">
        @for (int i = 0; i < 8; i++)
        {
            <div class="ovelsediv" style="background-image:-webkit-gradient() ;">
                <p class="OvelseNam">Navn på øvelse </p>
            </div>

        }
    </div>
</body>
</html>



