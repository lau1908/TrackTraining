    <script>


        $('#safeRecord').click(function () {
            var Gentagelser = $('#MaxReps').val();
            var Dato = $('#RepDato').val();

            if (Gentagelser && Dato !=" ") {
                $.ajax({

                    type: "POST",
                    dataType: "JSON",
                    url: "/Home/Contact",
                    data: {

                        Gentagelser: Gentagelser, date: Dato
                    },

                });
            }
           
        })

    </script>


</div>


